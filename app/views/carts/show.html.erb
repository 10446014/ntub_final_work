<h1>購物車</h1>
<div style="float:right">
  <%= link_to "清空購物車", cart_path, method: "delete",class: "btn btn-danger" %>
</div><br/><br/>

<div style="text-align:center">
  <table class="table table-hover">
    <col class="col1" width="20%">
  	<col class="col1" width="20%">
  	<col class="col1" width="20%">
  	<col class="col1" width="20%">
  	<col class="col1" width="20%">
    <thead>
      <tr class="success">
        <td><h4>商品圖片</h4></td>
        <td><h4>商品名稱</h4></td>
        <td><h4>數量</h4></td>
        <td><h4>單價</h4></td>
        <td><h4>小計</h4></td>
      </tr>
    </thead>
    <tbody>
      <% current_cart.items.each do |item| %>
        <tr>
          <td><%= image_tag(item.organic.image_url, :width => '150px', :height => '150px') %></td>
          <td><%= item.organic.title %></td>
          <td><%= item.quantity %></td>
          <td><%= item.organic.price %></td>
          <td><%= item.price %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
    <tr class="danger">
      <td><h4>總計</h4></td>
      <td></td>
      <td></td>
      <td></td>
      <td><h4><%= current_cart.total_price %></h4></td>
    </tfoot>
  </table>
</div>

  <%= link_to '繼續選購', organics_path, class: "btn btn-default" %>
